{
	"manifest_version": 2,

	"name": "Illinois Wikifier",
	"description": "Enables the 'wikification' of any website",
	"version": "1.0",

	"permissions": [
		"http://greystock.cs.illinois.edu:8080/",
		"tabs",
		"activeTab",
		"webNavigation"
	],

	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},

	"icons": { 
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png" 
	},

	"browser_action": {
		"default_icon": "icon48.png",
		"default_title": "'Wikify' this website"
	}
}